{
  "name": "package-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "esbuild --bundle src/index.ts --format=esm --outfile=dist/esm.js",
    "build:cjs": "esbuild --bundle src/index.ts --format=cjs --outfile=dist/cjs.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --fix -c .eslintrc.js",
    "test": "vitest run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "esbuild": "^0.15.7",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "typescript": "^4.8.3",
    "vitest": "^0.23.2"
  },
  "exports": {
    "import": "./dist/esm.js",
    "require": "./dist/cjs.js"
  }
}